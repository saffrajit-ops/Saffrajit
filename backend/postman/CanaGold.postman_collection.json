              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile/change-password",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "users",
                "profile",
                "change-password"
              ]
            }
          }
        }
      ]
    },
